<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MTSTetaProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MovieGenreText">
        <item name="android:background">@drawable/movie_genre_rounded_oval</item>
        <item name="android:paddingStart">9dp</item>
        <item name="android:paddingEnd">9dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MovieDateText">
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MovieNameText">
        <item name="android:paddingTop">@dimen/movie_detail_name_padding_top</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieNameText.ToolBarCollapsedLand" parent="MovieNameText">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>

    </style>

    <style name="MovieRatingAgeText">
        <item name="android:background">@drawable/movie_age_rating_rounded_circle</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MovieDescriptionText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MovieToolbarBeforeCollapsed">
        <item name="android:layout_height">105dp</item>
        <item name="android:paddingStart">@dimen/movie_detail_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/movie_detail_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/movie_detail_padding_top</item>
        <item name="android:paddingBottom">@dimen/movie_detail_header_padding_bottom</item>
    </style>

    <style name="MovieToolbarCollapsed">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">@dimen/design_appbar_elevation</item>
    </style>

    <style name="MovieRatingStar">
        <item name="android:layout_marginStart">2dp</item>
    </style>

    <style name="MovieActorsHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="BottomNavigationView">
        <item name="itemBackground">@drawable/navigation_bottom_background</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

</resources>