<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.kamikadze328.mtstetaproject.presentation.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.kamikadze328.mtstetaproject.presentation.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_movie_details"
            app:destination="@id/navigation_movie_details"
            app:launchSingleTop="true"
            app:popUpToSaveState="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_movie_details"
        android:name="com.kamikadze328.mtstetaproject.presentation.moviedetails.MovieDetailsFragment"
        tools:layout="@layout/fragment_movie_details">
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>
</navigation>