<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:id="@+id/rating_bar_root"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/movie_rating_star_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/star_filled_description"
        android:src="@drawable/ic_star_filled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/movie_rating_star_2"
        style="@style/MovieRatingStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/star_filled_description"
        android:src="@drawable/ic_star_filled"
        app:layout_constraintStart_toEndOf="@id/movie_rating_star_1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/movie_rating_star_3"
        style="@style/MovieRatingStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/star_filled_description"
        android:src="@drawable/ic_star_filled"
        app:layout_constraintStart_toEndOf="@id/movie_rating_star_2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/movie_rating_star_4"
        style="@style/MovieRatingStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/star_filled_description"
        android:src="@drawable/ic_star_filled"
        app:layout_constraintStart_toEndOf="@id/movie_rating_star_3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/movie_rating_star_5"
        style="@style/MovieRatingStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/star_empty_description"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toEndOf="@id/movie_rating_star_4"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>