<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/actor_container_width"
    android:layout_height="@dimen/actor_container_height"
    android:background="@color/transparent">

    <ImageView
        android:id="@+id/actor_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/actor_image_description"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/actor_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_baseline_face_24" />

    <TextView
        android:id="@+id/actor_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/actor_name_tools" />
</androidx.constraintlayout.widget.ConstraintLayout>