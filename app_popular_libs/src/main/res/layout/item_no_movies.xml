<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/no_movie_header"
        style="@style/MovieMainHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/movie_main_no_movies_header"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/no_movie_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/movie_main_no_movies_description"
        app:layout_constraintBottom_toTopOf="@id/no_movie_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_movie_header"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/no_movie_img"
        android:layout_width="@dimen/movie_main_no_movies_img_size"
        android:layout_height="@dimen/movie_main_no_movies_img_size"
        android:contentDescription="@string/movie_main_no_movies_header"
        android:src="@drawable/ic_baseline_videocam_off_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_movie_description" />
</androidx.constraintlayout.widget.ConstraintLayout>